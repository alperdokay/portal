@using FRC.Portal.Common.Enums
@model IEnumerable<FRC.Portal.Data.Domains.Account>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    int a = 1;
}
<!-- start page content -->
<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-left">
                    <div class="page-title">Kullanıcılar</div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li>
                        <i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="@Url.Action("Index","Account")">Anasayfa</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li class="active">Kullanıcılar</li>
                </ol>
            </div>
        </div>

        <!-- start new student list -->
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="card card-box">
                    <div class="card-head">
                        <header>Kullanıcılar</header>
                        <div class="tools">
                            <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                            <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                            <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-6">
                                <div class="btn-group">
                                    <button id="addRow1" class="btn btn-info" onclick="window.location = '@Url.Action("Create","Account")'">
                                        Yeni Ekle <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-wrap">
                            <div class="table-responsive">
                                <table class="table display product-overview mb-30" id="support_table">
                                    <thead>
                                        <tr>
                                        <tr>
                                            <th>
                                                No
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.UserName)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Password)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.FullName)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.UserRole)
                                            </th>
                                            <th>İşlem</th>
                                        </tr>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            EnumAccountTypes.Roles role = (EnumAccountTypes.Roles)item.UserRole;
                                            <tr>
                                                <td>
                                                    @a
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.UserName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Password)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.FullName)
                                                </td>
                                                <td>@role</td>
                                                <td>
                                                    <a href="@Url.Action("Update", "Account", new {id = item.Id})" class="" data-toggle="tooltip" title="Edit"><i class="fa fa-check"></i></a>
                                                    <a href="@Url.Action("Delete", "Account", new {id = item.Id})" class="text-inverse" title="Delete" data-toggle="tooltip"><i class="fa fa-trash"></i></a>
                                                </td>
                                            </tr>
                                            a++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end new student list -->
    </div>
</div>
<!-- end page content -->

